import Link from "../components/Link.astro";
import MainLayout from "../layouts/MainLayout.astro";

const skills = [
  { skill: "HTML" },
  { skill: "CSS" },
  { skill: "JavaScript" },
  { skill: "WordPress" },
  { skill: "Next.js" },
  { skill: "Astro" },
  { skill: "React" },
  { skill: "Tailwind CSS" },
