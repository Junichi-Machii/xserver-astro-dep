---

//library imports
import { Image } from "@astrojs/image/components";

// utils imports
import { slugify, formatDate } from "../js/utils";

const { post } = Astro.props;

const { title, date, author, image, description, category} = post.frontmatter;

---


<pre>{JSON.stringify(post.frontmatter, null, 2)}</pre>

<article class="card">
    <small>
      <a href={`/category/${slugify(category)}/`}
      class="badge">{category}</a>
    </small>
    <a href=>
      <Image 
    src={image.src} 
    alt={image.alt}
    width=""
    height="600"
    format="avif"
    fit="cover"
    quality={80}
    aspectRatio="5:2"
    class="hero-image"
    />
    </a>
    <h1 class="h2">{title}</h1>
    <p>by <a href={`/author/${slugify(author)}/`}>{author}</a>
    ãƒ» {formatDate(date)}</p>
  
</article>
