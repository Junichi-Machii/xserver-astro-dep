---
//library imports
import { Image } from "@astrojs/image/components";

// utils imports
import { slugify, formatDate } from "../js/utils";


const { frontmatter, url } = Astro.props;

const { title, date, author, image, description, category } = frontmatter;
---

<pre>{JSON.</pre>

<article class="card">
    <small>
      <a href={`/category/${slugify(category)}/`}
      class="badge">{category}</a>
    </small>
    <a href=>
      <Image 
      src={image.src} 
      alt={image.alt}
      width="400"
      height="250"
      format="webp"
      fit="cover"
      quality={80}
      aspectRatio="4:1"
      />
    </a>
    <h1 class="h2">{title}</h1>
    <p>by <a href={`/author/${slugify(author)}/`}>{author}</a>
    ãƒ» {formatDate(date)}</p>

</article>